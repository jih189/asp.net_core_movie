@page
@model RazorPagesMovie.Pages.Movies.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <p>Login using form below:</p>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        Username: <input asp-for="userlogin.Username" value="username" /><br />
        Password: <input asp-for="userlogin.Password" value="password" /><br />
        Remember me: <input asp-for="userlogin.RememberMe" type="checkbox" /><br />
        <input type="submit" value="Login" />
        @Html.AntiForgeryToken()
    </form>
</body>
</html>